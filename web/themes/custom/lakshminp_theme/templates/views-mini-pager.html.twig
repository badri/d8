{#
/**
* @file
* Default theme implementation for a views mini-pager.
*
* Available variables:
* - items: List of pager items.
*
* @see template_preprocess_views_mini_pager()
*
* @ingroup themeable
*/
#}
{%
set page_link_classes = [
    'block',
    'hover:text-white',
    'hover:bg-blue',
    'text-blue',
    'border',
    'border-grey-light',
    'px-3',
    'py-2',
]
%}

{% if items.previous or items.next %}
    <nav role="navigation" aria-labelledby="pagination-heading">
	<h4 class="visually-hidden">{{ 'Pagination'|t }}</h4>
	<ul class="blog-pagination flex list-reset rounded w-auto my-6">
	    {% if items.previous %}
		<li>
		    <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes.addClass(page_link_classes)|without('href', 'title', 'rel') }}>
			<span class="visually-hidden">{{ 'Previous page'|t }}</span>
			<span aria-hidden="true">{{ items.previous.text|default('‹‹'|t) }}</span>
		    </a>
		</li>
	    {% endif %}
	    {% if items.current %}
		<li>
		    <a class="block text-white bg-blue border-r border-blue px-3 py-2" href="#">{{ items.current }}</a>
		</li>
	    {% endif %}
	    {% if items.next %}
		<li>
		    <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes.addClass(page_link_classes)|without('href', 'title', 'rel') }}>
            <span class="visually-hidden">{{ 'Next page'|t }}</span>
            <span aria-hidden="true">{{ items.next.text|default('››'|t) }}</span>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
